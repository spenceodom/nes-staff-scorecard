# NES Staff Scorecard - Environment Variables
# Copy this to .env.local and fill in your values

# =============================================================================
# DATABASE (Cloud SQL Postgres)
# =============================================================================
# For local development:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nes_scorecard
DB_USER=postgres
DB_PASSWORD=

# For Cloud Run (set via Cloud Run environment):
# CLOUD_SQL_CONNECTION_NAME=project-id:region:instance-name

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Session secret (generate with: openssl rand -hex 32)
SESSION_SECRET=

# Google OAuth (create at console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# Allowed domain for Google OAuth (e.g., nes-utah.org)
GOOGLE_ALLOWED_DOMAIN=

# =============================================================================
# EMAIL (Resend for magic links)
# =============================================================================
RESEND_API_KEY=
EMAIL_FROM=NES Scorecard <noreply@nes-scorecard.app>

# =============================================================================
# APPLICATION
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Super admin email (has access to all areas)
SUPER_ADMIN_EMAIL=
